{% extends "layout" %}

{% block content %}
<div id="wrapper">
    <div class="container">
        <div class="panel panel-default">
            <div class="panel-heading">Bejelentkezés / Regisztráció</div>
            <div class="panel-body">
                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                    <legend style="border:none">Bejelentkezés</legend>
                    <form class="form-horizontal" role="form" method="POST" action="/login">
                    {{ csrfField }}
                        <fieldset>
                            <div class="form-group">
                                <label for="username" class="col-xs-3 col-sm-3 col-md-3 col-lg-3 control-label">Felhasználónév</label>
                                <div class="col-xs-9 col-sm-9 col-md-9 col-lg-9">
                                    <input type="text" class="form-control" id="username" placeholder="Felhasználónév" name="username" required>
                                    <i class="glyphicon glyphicon-user form-control-feedback" style="text-align:left;"></i>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="password" class="col-xs-3 col-sm-3 col-md-3 col-lg-3 control-label">Jelszó</label>
                                <div class="col-xs-9 col-sm-9 col-md-9 col-lg-9">
                                    <input type="password" class="form-control" id="password" placeholder="Jelszó" name="password" required>
                                    <i class="glyphicon glyphicon-lock form-control-feedback" style="text-align:left;"></i>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3 col-sm-offset-3 col-md-offset-3 col-lg-offset-3">
                                    <button type="submit" class="btn btn-info"><i class="fa fa-btn fa-sign-in" style="padding-right:10px"></i>Belépés</button>
                                </div>
                            </div>
                        </fieldset>
                    </form>
                </div>
                <hr style="border: 1px solid grey; margin-left:15px; margin-right:15px;" class="visible-xs"/>
                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                    <legend style="border:none">Regisztráció</legend>
                    <form class="form-horizontal" role="form" method="POST" action="/register">
                        
                        {{ csrfField}}
                        
                        <div class="form-group">
                            <label for="inputUsername" class="col-xs-3 col-sm-3 col-md-3 col-lg-3 control-label">Felhasználónév</label>
                            <div class="col-xs-9 col-sm-9 col-md-9 col-lg-9">
                                <input type="text" class="form-control" id="inputUsername" placeholder="Felhasználónév" name="inputUsername" required>
                                <i class="glyphicon glyphicon-user form-control-feedback" style="text-align:left;"></i>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputEmail" class="col-xs-3 col-sm-3 col-md-3 col-lg-3 control-label">E-mail</label>
                            <div class="col-xs-9 col-sm-9 col-md-9 col-lg-9">
                                <input type="email" class="form-control" id="inputEmail" placeholder="E-mail" name="inputEmail" required>
                                <i class="glyphicon glyphicon-envelope form-control-feedback" style="text-align:left;"></i>
                            </div>
                        </div>
                        <div class="form-group">
                                <label for="inputPassword" class="col-xs-3 col-sm-3 col-md-3 col-lg-3 control-label">Jelszó</label>
                                <div class="col-xs-9 col-sm-9 col-md-9 col-lg-9">
                                    <input type="password" class="form-control" id="inputPassword"
                                           placeholder="min. 8 karakter(Nagy-, kisbetű, szám, spec. karakter)"
                                           name="inputPassword" pattern="^(?=.*[0-9])(?=.*[!@#$%^&*_])[\w!@#$%^&*_]{6,16}$" title="Speciális karakterek: !@#$%^&*_" required>
                                    <i class="glyphicon glyphicon-lock form-control-feedback" style="text-align:left;"></i>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputConfirmPassword" class="col-xs-3 col-sm-3 col-md-3 col-lg-3 control-label">Jelszó megerősítése</label>
                                <div class="col-xs-9 col-sm-9 col-md-9 col-lg-9">
                                    <input type="password" class="form-control" id="inputConfirmPassword" placeholder="U.a a jelszó" name="inputConfirmPassword" 
                                            pattern="^(?=.*[0-9])(?=.*[!@#$%^&*_])[\w!@#$%^&*_]{6,16}$" required>
                                    <i class="glyphicon glyphicon-lock form-control-feedback" style="text-align:left;"></i>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3 col-sm-offset-3 col-md-offset-3 col-lg-offset-3">
                                    <button type="submit" class="btn btn-success"><i class="glyphicon glyphicon-user" style="padding-right:10px"></i>Regisztráció</button>
                                </div>
                            </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="text-center" style="color:green"><h3>{{registerMessage.success}}</h3></div>
        <div class="text-center" style="color:darkred;font-weight:bold"><h3>{{error}}</h3></div>
        {% if old('errors') %}
            <ul class="text-center">
                {% for error in old('errors') %}
                <li style="list-style:none;color:darkred;font-weight:bold">{{ error.message }}</li>
                {% endfor %}
            </ul>
        {% endif %}
    </div>
</div>
{% endblock %}